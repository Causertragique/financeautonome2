rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Règles pour les documents des transactions
    // Utiliser le nouveau chemin avec sous-collections : users/{userId}/transactions/{transactionId}/{fileName}
    match /users/{userId}/transactions/{transactionId}/{fileName} {
      // Permettre la lecture si l'utilisateur est authentifié et est le propriétaire
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Permettre l'écriture si l'utilisateur est authentifié et est le propriétaire
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024  // Limite de 10MB
                   && request.resource.contentType.matches('(application/pdf|image/.*|application/msword|application/vnd.openxmlformats-officedocument.*|application/vnd.ms-excel.*)');
      
      // Permettre la suppression si l'utilisateur est authentifié et est le propriétaire
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les anciennes transactions (legacy - pour compatibilité)
    match /transactions/{userId}/{transactionId}/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('(application/pdf|image/.*|application/msword|application/vnd.openxmlformats-officedocument.*|application/vnd.ms-excel.*)');
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les photos de profil
    match /users/{userId}/profile/{fileName} {
      // Permettre la lecture si l'utilisateur est authentifié et est le propriétaire
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Permettre l'écriture si l'utilisateur est authentifié et est le propriétaire
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024  // Limite de 5MB
                   && request.resource.contentType.matches('image/.*');
      
      // Permettre la suppression si l'utilisateur est authentifié et est le propriétaire
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Refuser l'accès à tous les autres chemins
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
